import board
import busio
import adafruit_tlc59711
import time
import numpy as np

spi = busio.SPI(board.SCK, MOSI=board.MOSI)
leds = adafruit_tlc59711.TLC59711(spi)
leds[0]=(30000,0,0)

freq = 5

#steps = np.linspace(0,65535,20)

#for i in steps:
    #leds[0] = (0,0,int(i))
    #print(int(i))
    #time.sleep(10)

#leds.b0 = 1000
while True:
    leds[0] = (65535,0,0)
    time.sleep(1/(freq*2))
    leds[0] = (0,0,0)
    time.sleep(1/(freq*2))
    print ("Running")
